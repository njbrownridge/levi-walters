---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Apex Scrap Metals - Professional Metal Recycling Services">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-orange-900 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-5xl lg:text-6xl font-bold mb-6">
            Turn Your <span class="text-orange-400">Scrap Metal</span> Into Cash
          </h1>
          <p class="text-xl mb-8 text-gray-200">
            Professional scrap metal recycling with competitive prices, reliable service, and convenient pickup options.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-orange-500 hover:bg-orange-600 px-8 py-3 rounded-lg font-semibold text-center transition-colors">
              Get Free Quote
            </a>
            <a href="/prices" class="border-2 border-white hover:bg-white hover:text-gray-900 px-8 py-3 rounded-lg font-semibold text-center transition-colors">
              View Current Prices
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>